<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape>
      <gradient
          android:startColor="@color/yellow3"
          android:endColor="@color/yellow4"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/yellow5" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="10dip"
          android:top="12dip"
          android:right="10dip"
          android:bottom="12dip" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape>
      <gradient
          android:endColor="@color/yellow4"
          android:startColor="@color/yellow3"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/yellow5" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="10dip"
          android:top="12dip"
          android:right="10dip"
          android:bottom="12dip" />
    </shape>
  </item>

  <item>
    <shape>
      <gradient
          android:endColor="@color/yellow2"
          android:startColor="@color/yellow1"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="@color/yellow5" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="10dip"
          android:top="12dip"
          android:right="10dip"
          android:bottom="12dip" />
    </shape>
  </item>
</selector>