<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/res_pressed_text" />
    <item android:state_focused="false" android:state_enabled="true" android:color="@color/res_normal_text" />
    <item android:state_focused="true" android:state_enabled="true" android:color="@color/res_focused_text" />
    <item android:state_focused="false" android:state_enabled="false" android:color="@color/res_disabled_text" />
    <item android:state_focused="true" android:state_enabled="false" android:color="@color/res_disabled_and_focused_text" />

</selector>