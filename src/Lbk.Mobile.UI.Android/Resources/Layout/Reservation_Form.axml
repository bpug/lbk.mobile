<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:gravity="center_horizontal">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ich möchte gerne verbindlich im Restaurant Bräustüberl reservieren."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent">
                    <TextView
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical" />
                    <TextView
                        style="@style/required_item"
                        local:MvxBind="Visibility Visibility(Errors['GuestName'])" />
                </LinearLayout>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:textColor="@color/black"
                    local:MvxBind="Text GuestName" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent">
                    <TextView
                        android:text="Plätze"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical" />
                    <TextView
                        style="@style/required_item"
                        android:paddingTop="10dp"
                        local:MvxBind="Visibility Visibility(Errors['Seats'])" />
                </LinearLayout>
                <Button
                    android:id="@+id/pick_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plätze"
                    local:MvxBind="Text Seats" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent">
                    <TextView
                        android:text="Zeit"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical" />
                    <TextView
                        style="@style/required_item"
                        android:paddingTop="10dp"
                        local:MvxBind="Visibility Visibility(Errors['ReservationTime'])" />
                </LinearLayout>
                <Button
                    android:id="@+id/pick_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datum"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    local:MvxBind="Text Format('{0:dd MMM yyyy}', ReservationTime)" />
                <Button
                    android:id="@+id/pick_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zeit"
                    local:MvxBind="Text Format('{0:H:mm}', ReservationTime)" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent">
                    <TextView
                        android:text="Telefon"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical" />
                    <TextView
                        style="@style/required_item"
                        local:MvxBind="Visibility Visibility(Errors['Mobile'])" />
                </LinearLayout>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:inputType="phone"
                    android:ems="10"
                    android:hint="Telefon"
                    android:textColor="@color/black"
                    local:MvxBind="Text Mobile" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Notiz"
                    android:layout_width="90dp"
                    android:layout_height="fill_parent"
                    android:gravity="top" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:hint="Text"
                    android:gravity="top"
                    android:textColor="@color/black"
                    local:MvxBind="Text Advice" />
            </LinearLayout>
            <TextView
                android:text="Die mit Sternchen (*) gekennzeichneten Felder sind Pflichtfelder."
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:gravity="top"
                android:enabled="false" />
            <Button
                style="@style/button_lbk"
                android:text="Anfragen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                local:MvxBind="Click ReserveCommand; Enabled Errors.Count, Converter=InvertedIsATrueValue" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>