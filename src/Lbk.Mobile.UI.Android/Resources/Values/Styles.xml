<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="main_content">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">10dp</item>
  </style>
  
  <style name="button_lbk">
    <item name="android:background">@drawable/btn_selector_gradient</item>
    <item name="android:padding">@dimen/btn_padding</item>
    <item name="android:textColor">@drawable/btn_selector_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  
  <style name="section_header">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="section_footer">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="required_item">
      <item name="android:text">*</item>
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:gravity">top</item>
    </style>

    <style name="picture_title">
      <item name="android:textSize">20sp</item>
      <item name="android:textStyle">bold</item>
      <item name="android:shadowColor">@color/black</item>
      <item name="android:shadowDx">0</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">1</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignLeft">@+id/picture_pager</item>
      <item name="android:layout_alignTop">@+id/picture_pager</item>
      <item name="android:layout_alignRight">@+id/picture_pager</item>
      <item name="android:gravity">center</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:background">@drawable/picture_title_bg</item>
      <item name="android:padding">10dp</item>
    </style>

    <style name="picture_description">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_alignLeft">@+id/picture_pager</item>
      <item name="android:layout_alignRight">@+id/picture_pager</item>
      <item name="android:layout_alignBottom">@+id/picture_pager</item>
      <item name="android:gravity">center</item>
      <item name="android:textColor">@color/white</item>
      <item name="android:background">@drawable/picture_title_bg</item>
      <item name="android:padding">10dp</item>
    </style>

  <style name="quiz_question">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/yellow1</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
  </style>

  <style name="quiz_answer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="quiz_info1">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">12sp</item>
    <item name="android:background">@drawable/runde_ecken_top_grey</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
  </style>

  <style name="quiz_info2">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">12sp</item>
    <item name="android:background">@color/grey</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
  </style>
</resources>